<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.HomeFragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/in_the_area_offer"
            android:layout_marginTop="90dp">

        <TextView
                android:text="@string/label_in_the_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_home_in_the_area_tv"
                style="@style/Text.bold20"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:text="@string/link_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_home_see_all_in_area_tv"
                style="@style/Text.light18"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="21dp"
                app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="328dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/fragment_home_in_area_HSV"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_in_the_area_tv"
                android:scrollbars="none">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        style="@style/Box.full_radius"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/fragment_home_offer_1_layout">

                    <TextView
                            android:text="@string/offer_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_home_offer_title_in_area_1_tv"
                            style="@style/Text.bold24"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="22dp"
                            android:layout_marginStart="13dp"
                            android:background="#00FFFFFF" />

                    <ImageView
                            android:src="@drawable/ic_launcher_foreground"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            tools:srcCompat="@tools:sample/avatars"
                            android:id="@+id/fragment_home_tools_image_in_area_1_IV"
                            android:layout_weight="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="6dp"
                            app:layout_constraintTop_toBottomOf="@+id/fragment_home_offer_title_in_area_1_tv"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/offer_image_of_the_tool"
                            tools:ignore="ImageContrastCheck" />

                    <TextView
                            android:text="@string/offer_last_first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_home_name_in_area_1_tv"
                            android:background="#00FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="14dp" />

                    <TextView
                            android:text="@string/offer_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_home_city_in_area_1_tv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="14dp"
                            android:layout_marginEnd="20dp"
                            android:background="#00FFFFFF" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        style="@style/Box.full_radius"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/fragment_home_offer_2_layout">

                    <TextView
                            android:text="@string/offer_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_home_offer_title_in_area_2_tv"
                            style="@style/Text.bold24"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="22dp"
                            android:layout_marginStart="13dp"
                            android:background="#00FFFFFF" />

                    <ImageView
                            android:src="@drawable/ic_launcher_foreground"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            tools:srcCompat="@tools:sample/avatars"
                            android:id="@+id/fragment_home_tools_image_in_area_2_IV"
                            android:layout_weight="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="6dp"
                            app:layout_constraintTop_toBottomOf="@+id/fragment_home_offer_title_in_area_2_tv"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/offer_image_of_the_tool" />

                    <TextView
                            android:text="@string/offer_last_first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_home_name_in_area_2_tv"
                            android:background="#00FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="14dp" />

                    <TextView
                            android:text="@string/offer_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_home_city_in_area_2_tv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="14dp"
                            android:layout_marginEnd="20dp"
                            android:background="#00FFFFFF" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/your_offer"
            android:layout_marginTop="70dp">

        <TextView
                android:text="@string/offer_your"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_home_your_offer_tv"
                style="@style/Text.bold20"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:text="@string/link_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_home_see_all_your_offer_tv"
                style="@style/Text.light18"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="21dp"
                app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="328dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/fragment_home_your_offer_HSV"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_your_offer_tv"
                android:scrollbars="none">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        style="@style/Box.full_radius.button"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/fragment_home_add_offer">

                    <TextView
                            android:text="@string/offer_add_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_home_offer_title_add_offer_tv"
                            style="@style/Text.bold32"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="33dp"
                            android:background="#00FFFFFF"
                            app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/plus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toBottomOf="@+id/fragment_home_offer_title_add_offer_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_reservation"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="80dp">

        <TextView
                android:text="@string/offer_my_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_home_my_reservation_tv"
                style="@style/Text.bold20"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:text="@string/link_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_home_see_all_my_reservation_tv"
                style="@style/Text.light18"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="21dp"
                app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="328dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/fragment_home_my_reservation_HSV"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_my_reservation_tv"
                android:scrollbars="none">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        style="@style/Box.full_radius.button"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/fragment_home_do_reservation">

                    <TextView
                            android:text="@string/offer_do_a_reservation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fragment_home_offer_title_add_reservation_tv"
                            style="@style/Text.bold32"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="33dp"
                            android:background="#00FFFFFF"
                            app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/plus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toBottomOf="@+id/fragment_home_offer_title_add_reservation_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>