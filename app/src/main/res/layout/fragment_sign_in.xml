<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SignInFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                style="@style/arrowButton"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="7dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:id="@+id/sign_in_back_btn" />

        <TextView
                android:text="@string/upper_title_connection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Text.Title"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="85dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/title_sign_in_tv" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="295dp"
                style="@style/Box"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_marginTop="401dp"
                app:layout_constraintTop_toBottomOf="@+id/title_sign_in_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0">

            <TextView
                    android:text="@string/upper_label_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sign_in_email_tv"
                    style="@style/Text.regular30"
                    android:background="#00FFFFFF"
                    android:labelFor="@id/sign_up_email_et"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="229dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" />

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/sign_in_email_et"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/sign_in_email_tv"
                    android:hint="@string/upper_label_email"
                    style="@style/Text.regular30"
                    android:autofillHints="emailAddress"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <TextView
                    android:text="@string/upper_text_sign_up"
                    android:id="@+id/sign_in_connection_button"
                    style="@style/fullButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/sign_in_email_et"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="40dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>