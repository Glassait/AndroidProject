<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.NewLocationFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                style="@style/returnButton"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="7dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:id="@+id/fragment_new_location_back_btn" />

        <TextView
                android:text="@string/upper_title_connection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Title"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="85dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/fragment_new_location_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="0dp"
                style="@style/full_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_new_location_title_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="125dp"
                android:layout_marginBottom="175dp">

            <TextView
                    android:text="@string/text_new_phone"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_new_location_text_part_1"
                    style="@style/regular30"
                    android:background="#00FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="45dp" />

            <TextView
                    android:text="@string/text_email_send"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_new_location_text_part_2"
                    style="@style/regular30"
                    android:background="#00FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:layout_marginTop="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_new_location_text_part_1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>