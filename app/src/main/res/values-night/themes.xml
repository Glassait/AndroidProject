<resources>

    <style name="Theme.AndroidProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/background_night</item>
        <item name="android:textColor">@color/on_background_night</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/on_background_night</item>
    </style>

    <style name="Text.bold24">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/primary_night</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">67sp</item>
    </style>

    <style name="Box">
        <item name="android:background">@drawable/box_border_night</item>
        <item name="android:textColor">@color/on_box_night</item>
    </style>

    <style name="fullButton" parent="Button">
        <item name="android:background">@drawable/full_button_night</item>
        <item name="android:textColor">@color/on_primary_night</item>
    </style>

    <style name="emptyButton" parent="Button">
        <item name="android:background">@drawable/empty_button_night</item>
        <item name="android:textColor">@color/on_box_night</item>
    </style>
</resources>