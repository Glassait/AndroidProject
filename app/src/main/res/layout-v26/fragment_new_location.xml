<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.start.NewLocationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                style="@style/returnButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintVertical_bias="0.015"
                android:id="@+id/back_btn" />

        <TextView
                android:text="@string/upper_title_connection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Title"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/fragment_new_location_title_tv"
                android:autoSizeTextType="uniform" />

        <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/Box.full_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_new_location_title_tv"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:text="@string/text_new_phone"
                    android:id="@+id/fragment_new_location_text_part_1"
                    style="@style/Text.normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:autoSizeTextType="uniform"
                    android:layout_height="150dp"
                    app:layout_constraintBottom_toTopOf="@+id/fragment_new_location_text_part_2"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center" />

            <TextView
                    android:text="@string/text_email_send"
                    android:layout_height="200dp"
                    android:autoSizeTextType="uniform"
                    android:id="@+id/fragment_new_location_text_part_2"
                    style="@style/Text.normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_new_location_text_part_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>